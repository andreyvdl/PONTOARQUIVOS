" 42 header info
let g:user42 = 'adantas-'
let g:mail42 = 'adantas-@student.42sp.org.br'

" Rainbow brackets
let g:rainbow_active=1

" Omnisharp
filetype indent plugin on
syntax enable
"let g:OmniSharp_server_path = '/home/me/omnisharp/omnisharp.http-linux-x64/run'
let g:OmniSharp_translate_cygwin_wsl = 1

" Vim configuration
let g:netrw_altv=1
let g:netrw_preview=1
set number
set relativenumber
set tabstop=4
set shiftwidth=4
set softtabstop=4
set mouse=a
set hlsearch
set autoindent
set list
set listchars=eol:%,tab:->,trail:~,extends:>,precedes:<
set titlestring=%t
set title
set ruler
set linebreak
set wrap
set laststatus=2
set showtabline=2
set encoding=utf-8
colorscheme native
syntax on
